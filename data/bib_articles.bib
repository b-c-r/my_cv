	pages = {571--580},
	file = {curtsdotteretal2011robustnesssecondaryextinctions8p5cbelh.pdf:/home/bcr/Dokumente/104-Literatur/curtsdotteretal2011robustnesssecondaryextinctions8p5cbelh.pdf:application/pdf},
