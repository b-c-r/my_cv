	author = {Marx, Jori M. and Rall, Björn C. and Phillips, Helen R. P. and Brose, Ulrich},
	year = {2019},
	note = {Supplement-URL: https://www.oikosjournal.org/appendix/oik-06141},
	keywords = {biomass distribution, carbon storage, fertilization, global warming, nutrient deposition, plant nutrient uptake, temperature dependence},
	pages = {1503--1514},
	file = {marxetal2019openingblackboxqwgj7b9t.pdf:/home/bcr/Dokumente/104-Literatur/marxetal2019openingblackboxqwgj7b9t.pdf:application/pdf},
