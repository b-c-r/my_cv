	keywords = {allometric scaling, biodiversity, complexity, ecosystem functioning, extinctions, food webs, global change, size spectrum, stability},
	pages = {684--697},
	file = {broseetal2017predictingconsequencesspeciesyqg7xdr2.pdf:/home/bcr/Dokumente/104-Literatur/broseetal2017predictingconsequencesspeciesyqg7xdr2.pdf:application/pdf},
